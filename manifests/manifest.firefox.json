{
  "manifest_version": 3,
  "name": "ogu adblock",
  "version": "1.0.1",
  "description": "blocks promo elements on oguser.com.",
  "browser_specific_settings": {
    "gecko": {
      "id": "ogu_adblock@182.ooo",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },
  "action": {
    "default_title": "ogu adblock"
  },
  "permissions": [],
  "host_permissions": ["https://oguser.com/*", "https://www.oguser.com/*"],
  "content_scripts": [
    {
      "matches": ["https://oguser.com/*", "https://www.oguser.com/*"],
      "js": ["content/blocker.js"],
      "run_at": "document_end"
    }
  ]
}
